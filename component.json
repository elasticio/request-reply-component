{
  "title": "HTTP Reply",
  "service": "request-reply",
  "description": "Used to reply to HTTP webhooks",
  "buildType":"docker",
  "actions": {
    "reply": {
      "title": "Reply",
      "main": "./reply.js",
      "fields": {
        "customHeaders": {
          "label": "Custom HTTP Headers",
          "required": false,
          "viewClass": "InMetadataExtensionView",
          "placeholder": "Header names separated by comma (e.g Content-Type,Content-Language)",
          "titlePrefix": "Header"
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "contentType": {
              "title": "Content Type (default application/json)",
              "type": "string",
              "required": false
            },
            "responseBody": {
              "title": "Response Body",
              "type": "string",
              "required": true,
              "maxLength": 1000
            },
            "statusCode": {
                "title": "Response Status Code",
                "type": "number",
                "minimum": 0,
                "maximum": 599,
                "required": false
            }
          }
        },
        "out": {}
      }
    },
    "reply_lightweight": {
      "title": "Reply-Lightweight",
      "main": "./reply-lightweight.js",
      "metadata": {
        "in": {},
        "out": {}
      }
    }
  }
}
