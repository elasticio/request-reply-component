{
    "title":"HTTP Reply",
    "description" : "Used to reply to HTTP webhooks",
    "actions" : {
        "reply" : {
            "title" : "Reply",
            "main" : "./reply.js",
            "fields": {
                "contentType":{
                    "viewClass":"SelectView",
                    "label":"Response Content Type",
                    "required":false,
                    "model":{
                        "application/json":"application/json",
                        "application/xml":"application/xml",
                        "text/plain":"text/plain"
                    },
                    "prompt":"Please select a Content Type"
                }
            },
            "metadata": {
                "in": {
                    "type": "object",
                    "properties": {
                        "responseBody": {
                            "title": "Response Body",
                            "type": "string",
                            "required": true,
                            "maxLength": 1000
                        }
                    }
                }
            }
        }
    }
}
