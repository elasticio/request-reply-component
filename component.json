{
  "title": "HTTP Reply",
  "service": "request-reply",
  "description": "Used to reply to HTTP webhooks",
  "actions": {
    "reply": {
      "title": "Reply",
      "main": "./reply.js",
      "fields": {
        "customHeaders": {
          "label": "Custom HTTP Headers",
          "required": false,
          "viewClass": "InMetadataExtensionView",
          "placeholder": "Header names separated by comma (e.g Content-Type,Content-Language)",
          "titlePrefix": "Header"
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "contentType": {
              "title": "Content Type (Defaults to application/json)",
              "type": "string",
              "required": false,
              "note": "Defaults to application/json",
              "placeholder": "application/json"
            },
            "responseBody": {
              "title": "Response Body",
              "type": "string",
              "required": true,
              "maxLength": 1000
            },
            "statusCode": {
              "title": "Response Status Code",
              "type": "number",
              "minimum": 0,
              "maximum": 599,
              "required": false,
              "placeholder": 200
            }
          }
        },
        "out": {}
      }
    },
    "replyWithAttachment": {
      "title": "Reply With Attachment",
      "main": "./replyWithAttachment.js",
      "fields": {
        "customHeaders": {
          "label": "Custom HTTP Headers",
          "required": false,
          "viewClass": "InMetadataExtensionView",
          "placeholder": "Header names separated by comma (e.g Content-Type,Content-Language)",
          "titlePrefix": "Header"
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "contentType": {
              "title": "Content Type (Defaults to application/json)",
              "type": "string",
              "required": false,
              "note": "Defaults to application/json",
              "placeholder": "application/json"
            },
            "responseUrl": {
              "title": "Attachment URL",
              "type": "string",
              "required": true,
              "placeholder": "https://your-attachment.url"
            },
            "statusCode": {
              "title": "Response Status Code",
              "type": "number",
              "minimum": 0,
              "maximum": 599,
              "required": false,
              "placeholder": 200
            }
          }
        },
        "out": {}
      }
    }
  }
}
