{
    "title":"HTTP Reply",
    "service": "request-reply",
    "description" : "Used to reply to HTTP webhooks",
    "actions" : {
        "reply" : {
            "title" : "Reply",
            "main" : "./reply.js",
            "fields": {
                "headers": {
                    "label": "Custom HTTP Headers",
                    "required": false,
                    "viewClass": "InputFieldsExtensionView",
                    "placeholder": "Header names separated by comma (e.g Content-Type,Content-Language)"
                }
            },
            "metadata": {
              "in": {
                "type": "object",
                "properties": {
                  "contentType": {
                    "title": "Content Type (default application/json)",
                    "type": "string",
                    "required": false
                  },
                  "responseBody": {
                    "title": "Response Body",
                    "type": "string",
                    "required": true,
                    "maxLength": 1000
                  }
                }
              }
            }
        }
    }
}
